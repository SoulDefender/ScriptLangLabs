{% extends 'template.html.twig' %}

{% block content %}

    <div class="card card-container">
        <p class="title">Password recovery</p>

        <form role="form" method="post">
            {% if requestScope.errors.email %}
                <div class="form-group has-error">
                    <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address"
                           value="{{ requestScope.user.email }}" required/>
                    <span class="help-block">{{ requestScope.errors.email }}</span>
                </div>
            {% else %}
                <div class="form-group">
                    <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address"
                           value="" required/>
                </div>
            {% endif %}
            <div class="row">
                <div class="col-md-4 col-md-offset-4 form-group">
                    <input class="btn btn-lg btn-primary" value="Send request" type="submit">
                </div>
            </div>
        </form>
    </div><!-- /card-container -->

{% endblock %}